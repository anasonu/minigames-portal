<h1 style="margin-top: 15px; margin-bottom: 25px;"> Pagina de edicion del juego </h1>

<form action="/games/{{gameEdit._id}}/edit-image" method="POST" enctype="multipart/form-data">
<div class="mb-3">
    <label class="form-label" for="imagen"> Imagen de portada: </label>
    <input class="form-control" type="file" name="imagen" />
</div>
    <button class="btn btn-primary mb-3"> Guardar imagen </button>   
</form>

<p style="color:red">{{errorMessage}} </p>

<form action="/games/{{gameEdit._id}}/edit" method="POST">
<div class="mb-3">
    <label class="form-label" for="titulo"> Titulo: </label>
    <input class="form-control" type="text" name="titulo" value="{{gameEdit.titulo}}" />
</div>
<div class="mb-3">
    <label class="form-label" for="descripcion"> Descripci√≥n: </label>
    {{!-- <input class="form-control" type="text" name="descripcion" value="{{gameEdit.descripcion}}" /> --}}
    <textarea class="form-control" name="descripcion" rows="4" cols="50">{{gameEdit.descripcion}}</textarea>
</div>
<div class="mb-3">
    <label class="form-label" for="url"> URL: </label>
    <input class="form-control" type="text" name="url" value="{{gameEdit.url}}" />
</div>

    <button class="btn btn-primary mb-3"> Guardar cambios </button>
    
</form>

<form action="/games/{{gameEdit._id}}/delete" method="POST">
    <button class="btn btn-danger mb-3"> Borrar </button>
</form>

